<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MyApplication">

        <activity
            android:name=".activity_popup_address"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="@string/title_activity_popup_address">
        </activity>
        <activity
            android:name=".activity_signup"
            android:label="@string/title_activity_signup"></activity>
        <activity
            android:name=".activity_sitter_estimate_detail"
            android:label="@string/title_activity_sitter_estimate_detail" />
        <activity
            android:name=".activity_sitter_estimate"
            android:label="@string/title_activity_sitter_estimate" />
        <activity
            android:name=".activity_reserve_entrust_detail"
            android:label="@string/title_activity_reserve_entrust_detail" />
        <activity
            android:name=".activity_main_sitter"
            android:label="@string/title_activity_main_sitter" />
        <activity
            android:name=".activity_reserve_entrust"
            android:label="@string/title_activity_reserve_entrust" />
        <activity
            android:name=".activity_reserve_visit"
            android:label="@string/title_activity_reserve_visit" />
        <activity
            android:name=".activity_login"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>