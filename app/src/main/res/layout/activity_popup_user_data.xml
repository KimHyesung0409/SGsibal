<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#FFFFFF"
tools:context=".Activity.activity_popup_user_data">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/button_next_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="100dp"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원 정보 - 펫 시터"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/popup_user_info_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_person_24" />

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/textview_popup_user_data_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가져올 이름"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="성별"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/textview_popup_user_data_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가져올 성별"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:background="@drawable/custom_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="생년월일"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textview_popup_user_data_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="가져올 생년월일"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:background="@drawable/custom_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이메일"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textview_popup_user_data_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="가져올 이메일"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/textview_popup_user_data_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 폰번호"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="주소"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textview_popup_user_data_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="가져올 주소"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textview_popup_user_data_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 상세주소"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="케어 가능한 동물 종류"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textview_popup_user_data_care_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 \n케어 \n가능한 \n동물 종류"
                android:lines="4"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="시팅가능한 시간"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textview_popup_user_data_can_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 시팅 가능한 시간"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="후기"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_popup_user_data_reviewlist"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickReserve"
            android:text="예약하기"/>

        <Button
            android:id="@+id/button_popup_user_data_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickFavorites"
            android:text="즐겨찾기"/>

    </LinearLayout>


</FrameLayout>