<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_reserve_visit">

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/SeekBarWithoutSteps"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:progress="0"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <LinearLayout
        android:id="@+id/layout_progress_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_progress_visit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="8pt"
            android:gravity="center"
            android:text="반려 동물"/>

        <TextView
            android:id="@+id/TextView_progress_visit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="8pt"
            android:gravity="center"
            android:text="날짜 설정"/>

        <TextView
            android:id="@+id/TextView_progress_visit_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="8pt"
            android:gravity="center"
            android:text="매칭 방법"/>

        <TextView
            android:id="@+id/TextView_progress_visit_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="8pt"
            android:gravity="center"
            android:text="유의 사항"/>

        <TextView
            android:id="@+id/TextView_progress_visit_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="8pt"
            android:gravity="center"
            android:text="결제 단계"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_reserve_visit_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>