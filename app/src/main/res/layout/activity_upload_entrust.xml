<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_upload_entrust">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/button_next_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="제목"/>

            <EditText
                android:id="@+id/edit_upload_entrust_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:hint="제목을 입력해주세요."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="소개글"/>

            <EditText
                android:id="@+id/edit_upload_entrust_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="15"
                android:hint="소개글을 입력해주세요."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="주의사항"/>

            <EditText
                android:id="@+id/edit_upload_entrust_caution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:hint="주의사항을 입력해주세요."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="가격"/>

            <EditText
                android:id="@+id/edit_upload_entrust_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:hint="가격을 입력해주세요."/>

            <Button
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickSelectPic"
                android:text="이미지 추가하기"/>

            <LinearLayout
                android:id="@+id/linearlayout_upload_entrust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_upload_entrust_1"
                    android:background="@drawable/ic_baseline_image_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageview_upload_entrust_2"
                    android:background="@drawable/ic_baseline_image_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageview_upload_entrust_3"
                    android:background="@drawable/ic_baseline_image_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageview_upload_entrust_4"
                    android:background="@drawable/ic_baseline_image_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageview_upload_entrust_5"
                    android:background="@drawable/ic_baseline_image_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="onClickUploadEntrust"
        android:text="등록하기"/>


</FrameLayout>