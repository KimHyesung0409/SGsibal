<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity_upload_story">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/button_next_height">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="제목"/>

    <EditText
        android:id="@+id/edit_upload_story_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:hint="제목을 입력하세요."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="이미지"/>

    <ImageView
        android:id="@+id/imageview_upload_story"
        android:background="@drawable/ic_baseline_image_24"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:onClick="onClickUploadStoryImage"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="내용"/>

    <EditText
        android:id="@+id/edit_upload_story_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="15"
        android:hint="제목을 입력하세요."/>



</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_upload_story_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickUploadStory_1" />

        <Button
            android:id="@+id/button_upload_story_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickUploadStory_2" />

    </LinearLayout>

</FrameLayout>