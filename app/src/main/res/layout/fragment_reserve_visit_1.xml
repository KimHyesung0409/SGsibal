<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_reserve_visit_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_next_height"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:text="반려동물 선택"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_petlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/bbbttt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_next_height"
        android:layout_gravity="bottom"
        android:text="다음"/>

</FrameLayout>