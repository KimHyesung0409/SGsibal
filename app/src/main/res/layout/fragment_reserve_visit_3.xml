<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_reserve_visit_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="@dimen/button_next_height"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매칭 방법 선택"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup_match_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiobutton_match_type_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/custom_radiobutton"
                android:button="@null"
                android:text="자동 매칭"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radiobutton_match_type_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/custom_radiobutton"
                android:button="@null"
                android:text="견적서 등록"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radiobutton_match_type_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/custom_radiobutton"
                android:button="@null"
                android:text="선택 매칭"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radioGroup_expended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="40dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radiobutton_expended_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:text="사용기록"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radiobutton_expended_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:text="검색"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radiobutton_expended_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:text="즐겨찾기"
                    android:textSize="20sp" />

            </RadioGroup>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="다음"/>

</FrameLayout>