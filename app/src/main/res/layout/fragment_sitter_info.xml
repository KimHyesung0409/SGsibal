<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.fragment_sitter_info">

    <ScrollView
        android:id="@+id/scrollView_sitter_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="100dp"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원 정보 - 펫 시터"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sitter_info_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_person_24" />


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/sitter_info_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가져올 이름"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="성별"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/sitter_info_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가져올 성별"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:background="@drawable/custom_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="생년월일"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/sitter_info_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="가져올 생년월일"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:background="@drawable/custom_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이메일"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/sitter_info_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="가져올 이메일"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/sitter_info_pnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 폰번호"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="주소"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/sitter_info_address_change_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:layout_gravity="right"
                    android:text="수정"/>

            </LinearLayout>

            <TextView
                android:id="@+id/sitter_info_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 주소"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/sitter_info_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 상세주소"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_underline"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="케어 가능한 동물 종류"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <ListView
                android:id="@+id/listview_info_can_pet"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <!--
            <TextView
                android:id="@+id/sitter_info_can_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 \n케어 \n가능한 \n동물 종류"
                android:lines="4"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>
            -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시팅가능한 시간"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/sitter_info_can_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가져올 시팅 가능한 시간"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/change_pwd_sitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="비밀번호 수정"
                android:layout_marginBottom="50dp"/>

            <Button
                android:id="@+id/return_profile_sitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="확인"/>

        </LinearLayout>


    </ScrollView>

</FrameLayout>